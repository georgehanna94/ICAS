<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Reset Application Information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:textSize="18sp" />

                    <TextView
                        android:text="Warning: do not reset application information without the knowledge of your doctor."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:padding="5dp"
                        android:textStyle="normal|italic"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:text="To delete the application's history (including previous test data, and personal information), press the button below."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:padding="5dp" />

                    <com.gc.materialdesign.views.ButtonRectangle
                        android:text="RESET"
                        android:layout_width="100dp"
                        android:id="@+id/reset"
                        android:layout_height="50dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Modify Profile Information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:textStyle="normal|bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:padding="5dp"
                        android:textSize="18sp" />

                    <TextView
                        android:text="To modify personal information (e.g. gender, date of injury) press the button below."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:padding="5dp" />

                    <com.gc.materialdesign.views.ButtonRectangle
                        android:text="MODIFY"
                        android:layout_width="100dp"
                        android:id="@+id/modify"
                        android:layout_height="50dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>