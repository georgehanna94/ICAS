<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.example.icas.integratedconcussionassessmentsystem">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Scat3"
            android:label="SCAT 3"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".scat3_instructions"
            android:label="SCAT 3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Posture_test2"
            android:label="Posture Test"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Homescreen"
            android:label="@string/title_activity_homescreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Posturography"
            android:label="Posture Test"
            android:parentActivityName=".Homescreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.example.icas.integratedconcussionassessmentsystem.Homescreen" />
        </activity>
        <activity
            android:name=".Scat3_landing"
            android:label="SCAT3 Test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>